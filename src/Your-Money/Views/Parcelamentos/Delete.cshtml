@model Your_Money.Models.Parcelamento

@{
    ViewData["Title"] = "Delete";
}

<body class="background-image">

<h2 style="color:darkblue">Deletar Parcela</h2>
<hr>

<h3 class="mt-2" style="color:blue">Você tem certeza que deseja excluir esta parcela?</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="formulario">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="LancamentoId" />
            <div class="form-group">
                <b style="color:darkblue"><label asp-for="Valor" class="control-label"></label></b>
                <input asp-for="Valor" class="form-control shadow-sm" disabled />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b style="color:darkblue"><label asp-for="DataPagamento" class="control-label"></label></b>
                <input asp-for="DataPagamento" type="date" class="form-control shadow-sm" id="dataPagamento" disabled />
                <span asp-validation-for="DataPagamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b style="color:darkblue"><label asp-for="DataVencimento" class="control-label"></label></b>
                <input asp-for="DataVencimento" type="date" class="form-control shadow-sm" disabled />
                <span asp-validation-for="DataVencimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b style="color:darkblue"><label asp-for="Status" class="control-label"></label></b>
                <select asp-for="Status" class="form-control shadow-sm" id="status" disabled>
                    <option value="" disabled>Selecione uma opção</option>
                    @if (Model.Status == true)
                    {
                        <option value="false">Pendente</option>
                        <option value="true" selected>Efetivado</option>
                    }
                    else
                    {
                        <option value="false" selected>Pendente</option>
                        <option value="true">Efetivado</option>
                    }
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-controller="Lancamentos" class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model.LancamentoId">Voltar</a>
        <input type="button" value="Deletar" class="btn btn-danger  btnConfirmDelete" />
    </form>


<div class="modal fade mt-5 pt-5" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" style="color:darkblue"><b>Confirmação</b></h5>
            </div>
            <div class="modal-body">
                <p>Deseja realizar a remoção <b>PERMANENTE</b> deste registro ?</p>
            </div>
            <div class="modal-footer">

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                        <a asp-controller="Lancamentos" class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model.LancamentoId">Voltar</a>
                    <input type="submit" value="Confirmar" class="btn btn-danger  btnConfirmDelete" />
                </form>

            </div>
        </div>
    </div>
</div>
</body>

@section scripts {

    <script type="text/javascript">

        $(".btnConfirmDelete").click(() => {
            $(".modal").modal("show")
        })
    </script>
        }